generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(uuid())
  no_pegawai String? @db.VarChar(20)
  email      String  @db.VarChar(50)
  nik        String? @unique @db.VarChar(50)
  name       String  @db.VarChar(50)
  password   String  @db.VarChar(100)
  token      String? @db.VarChar(255)
  roleId     String
  dinas      String? @db.VarChar(50)

  role        Role         @relation(fields: [roleId], references: [id])
  participant Participant? @relation(fields: [nik], references: [nik], onUpdate: Cascade, onDelete: SetNull)

  @@map("users")
}

model Role {
  id   String @id @default(uuid())
  role String @db.VarChar(50)

  users User[]

  @@map("roles")
}

model Participant {
  id                     String   @id @default(uuid())
  no_pegawai             String?   @db.VarChar(20)
  nama                   String?  @db.VarChar(50)
  nik                    String   @unique @db.VarChar(50)
  dinas                  String?   @db.VarChar(50)
  bidang                 String?   @db.VarChar(50)
  perusahaan             String  @db.VarChar(50)
  email                  String   @db.VarChar(50)
  no_telp                String   @db.VarChar(50)
  negara                 String   @db.VarChar(50)
  tempat_lahir           String   @db.VarChar(50)
  tanggal_lahir          DateTime @db.Date
  sim_a                  Bytes
  sim_b                  Bytes
  ktp                    Bytes
  foto                   Bytes
  surat_sehat_buta_warna Bytes
  exp_surat_sehat        DateTime @db.Date
  surat_bebas_narkoba    Bytes
  exp_bebas_narkoba      DateTime @db.Date
  link_qr_code           String?  @db.VarChar(255)
  qr_code                Bytes?
  gmf_non_gmf            String   @db.VarChar(20)

  user User?

  @@map("participants")
}

model Capability {
  id                        String               @id @default(uuid())
  kode_rating               String               @db.VarChar(20)
  kode_training             String               @db.VarChar(50)
  nama_training             String               @db.VarChar(50)
  durasi_materi_rating_exam Int
  durasi_materi_reguler     Int
  total_durasi_training     Int
  curriculumSyllabus        CurriculumSyllabus[]

  @@map("capability")
}

model CurriculumSyllabus {
  id                 String     @id @default(uuid())
  capabilityId       String
  reg_gse            String     @db.VarChar(255)
  durasi_teori_reg   Int
  durasi_praktek_reg Int
  kompetensi         String     @db.VarChar(255)
  durasi_teori_kom   Int
  durasi_praktek_kom Int
  total_durasi       Int
  capability         Capability @relation(fields: [capabilityId], references: [id])

  @@map("curriculumSyllabus")
}
