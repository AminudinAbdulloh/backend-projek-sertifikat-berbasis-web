generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int     @id @default(autoincrement())
  no_pegawai String? @db.VarChar(20)
  email      String  @db.VarChar(50)
  nik        String? @unique @db.VarChar(50)
  name       String  @db.VarChar(50)
  password   String  @db.VarChar(100)
  token      String? @db.VarChar(255)
  roleId     Int
  dinas      String? @db.VarChar(50)

  role        Role         @relation(fields: [roleId], references: [id])
  participant Participant? @relation(fields: [nik], references: [nik], onUpdate: Cascade, onDelete: SetNull)

  @@map("users")
}

model Dinas {
  id    Int    @id @default(autoincrement())
  dinas String @db.VarChar(50)

  // users User[]

  @@map("dinas")
}

model Role {
  id   Int    @id @default(autoincrement())
  role String @db.VarChar(50)

  users User[]

  @@map("roles")
}

model Participant {
  id                     Int      @id @default(autoincrement())
  no_pegawai             String   @db.VarChar(20)
  nama                   String?  @db.VarChar(50)
  nik                    String   @unique @db.VarChar(50)
  dinas                  String   @db.VarChar(50)
  bidang                 String   @db.VarChar(50)
  perusahaan             String   @db.VarChar(50)
  email                  String   @db.VarChar(50)
  no_telp                String   @db.VarChar(50)
  negara                 String   @db.VarChar(50)
  tempat_lahir           String   @db.VarChar(50)
  tanggal_lahir          DateTime @db.Date
  sim_a                  String   @db.VarChar(255)
  sim_b                  String   @db.VarChar(255)
  ktp                    String   @db.VarChar(255)
  foto                   String   @db.VarChar(255)
  surat_sehat_buta_warna String   @db.VarChar(255)
  exp_surat_sehat        DateTime @db.Date
  surat_bebas_narkoba    String   @db.VarChar(255)
  exp_bebas_narkoba      DateTime @db.Date
  link_qr_code           String?  @db.VarChar(255)
  qr_code                String?  @db.VarChar(255)
  gmf_non_gmf            String   @db.VarChar(20)

  user User?

  @@map("participants")
}
